FIND_PATH(CSAFESTRING_INCLUDE_DIR csafestring.h
        /usr/local/include
        /usr/include
        )

SET(CSAFESTRING_NAMES ${CSAFESTRING_NAMES} csafestring)
FIND_LIBRARY(CSAFESTRING_LIBRARY
        NAMES ${CSAFESTRING_NAMES}
        PATHS /usr/lib /usr/local/lib
        )

